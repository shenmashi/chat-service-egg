{
  "name": "node-egg-enterprise-api",
  "version": "1.0.0",
  "description": "企业级 Node.js + Egg.js RESTful API 框架",
  "private": true,
  "egg": {
    "typescript": true,
    "declarations": true,
    "tscompiler": "ts-node/register"
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-node-egg-enterprise-api",
    "stop": "egg-scripts stop --title=egg-server-node-egg-enterprise-api",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test": "npm run lint -- --fix && npm run test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "ci": "npm run lint && npm run cov",
    "autod": "autod",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf node_modules",
    "tspath": "tsc --noEmit",
    "build": "node scripts/build-official.js",
    "build:custom": "node scripts/build-deploy.js",
    "build:simple": "tsc && npm run copy:config && npm run copy:package",
    "copy:config": "node -e \"require('fs').copyFileSync('ecosystem.config.js', 'dist/ecosystem.config.js')\"",
    "copy:package": "node -e \"require('fs').copyFileSync('package.json', 'dist/package.json')\""
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^2.0.0",
    "@types/sharp": "^0.31.1",
    "@types/socket.io-client": "^1.4.36",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "egg": "^3.0.0",
    "egg-cors": "^2.2.3",
    "egg-jwt": "^3.1.4",
    "egg-multipart": "^2.12.0",
    "egg-mysql": "^3.0.0",
    "egg-redis": "^2.4.0",
    "egg-schedule": "^4.0.0",
    "egg-scripts": "^3.0.0",
    "egg-sequelize": "^6.0.0",
    "egg-static": "^2.0.0",
    "egg-swagger-doc": "^2.3.2",
    "egg-validate": "^2.0.2",
    "egg-view-nunjucks": "^2.3.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.2",
    "sequelize-cli": "^6.6.2",
    "sharp": "^0.34.4",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "autod": "^3.1.0",
    "autod-egg": "^1.1.0",
    "chai": "^4.3.10",
    "egg-bin": "^5.0.0",
    "egg-mock": "^5.0.0",
    "eslint": "^8.54.0",
    "eslint-config-egg": "^12.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "ci": {
    "version": "18, 20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eggjs/egg-boilerplate-simple.git"
  },
  "author": "eggjs",
  "license": "MIT"
}
